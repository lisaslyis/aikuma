<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	>
	<fragment
			android:name="org.lp20.aikuma.ui.ListenFragment"
			android:id="@+id/ListenFragment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
	/>
	<LinearLayout
		android:id="@+id/RespeakingImages"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/ListenFragment"
	/>
	<TextView
		android:id="@+id/ForeignText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Certo dia um homem foi para o mato."
		android:layout_below="@id/RespeakingImages"
		android:textSize="20sp"
	/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="One particular day a man went into the forest."
		android:layout_below="@id/ForeignText"
		android:textSize="20sp"
	/>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
	>
		<!--
		<ToggleButton
				android:id="@+id/phoneRespeaking"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:textOn="Phone respeak on"
				android:textOff="Phone respeak off"
				android:onClick="onPhoneRespeakingToggle"
		/> -->
		<Button
				android:id="@+id/thumbRespeaking"
				android:text="@string/thumb_respeaking"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:onClick="onThumbRespeakingButton"
		/>
		<Button
				android:id="@+id/phoneRespeaking"
				android:text="@string/phone_respeaking"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:onClick="onPhoneRespeakingButton"
		/>
	</LinearLayout>
</RelativeLayout>
