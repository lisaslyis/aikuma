<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:id="@+id/cancelAndOkButtons"
		>
		<ImageButton
			android:id="@+id/cancelButton"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:scaleType="centerInside"
			android:src="@drawable/cancel_48"
			android:layout_weight="1"
			android:onClick="onCancelButtonPressed"
		/>
		<ImageButton
			android:id="@+id/okButton"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:scaleType="centerInside"
			android:src="@drawable/ok_48"
			android:layout_weight="1"
			android:onClick="onOkButtonPressed"
		/>
	</LinearLayout>
	<VideoView
			android:id="@+id/videoView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@id/cancelAndOkButtons"
			android:layout_gravity="center"
	/>
</RelativeLayout>
